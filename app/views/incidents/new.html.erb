<%= stylesheet_link_tag "incidents/new" %>

<h1>Declare an Incident</h1>

<% form_for(@incident) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :started_at %><br />
    <%= f.datetime_select :started_at %>
  </p>
  <p>
    <%= f.label :ended_at %><br />
    <%= f.datetime_select :ended_at %>
  </p>
  <p>
    <%= f.submit "Create Incident" %>
  </p>
<% end %>

<%= link_to 'Back to All Incidents', incidents_path %>
