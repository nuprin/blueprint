<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <title>Blueprint<%= ": #{@title}" if @title %></title>
  <script src="http://www.google.com/jsapi"></script>
  <%= stylesheet_link_tag "base" %>
  <%= stylesheet_link_tag "superfish" %>
  <%= stylesheet_link_tag "blueprint" %>
  <%= javascript_include_tag "jquery" %>
  <%= javascript_include_tag "hoverIntent" %>
  <%= javascript_include_tag "superfish" %>
  <%= javascript_include_tag "blueprint" %>
</head>
<body>
  <div id="container">
    <div id="header">
      <div id="nav">
        <ul class="sf-menu clearfix" id="add_links">
          <li>
            <%= link_to "ADD A TASK", new_task_path(:kind => "task") %>
            <ul>
              <% User.all.each do |u| %>
                <li><%= link_to "#{u.name}",
                  new_task_path(:kind => "task", :assignee_id => u.id) %></li>
              <% end %>
            </ul>
          </li>
          <li>
            <%= link_to "ADD A BUG", new_task_path(:kind => "bug") %>
            <ul>
              <% User.all.each do |u| %>
              <li><%= link_to "#{u.name}",
                new_task_path(:kind => "bug", :assignee_id => u.id) %></li>
              <% end %>
            </ul>
          </li>
        </ul>
        <ul class="nav sf-menu clearfix" id="filters">
          <li>
            <%= link_to "PROJECTS", tasks_path %>
            <ul>
              <% Project.sorted.each do |p| %>
                <li><%= link_to p.title, project_path(p) %></li>
              <% end %>
              <li><%= link_to "Create a Project...", new_project_path %></li>
            </ul>
          </li>
          <li>
            <%= link_to "PEOPLE", people_tasks_path %>
            <ul>
              <% User.all.each do |u| %>
                <li><%= link_to "#{u.name}", user_path(u) %></li>
              <% end %>
            </ul>
          </li>
          <% if viewer.real? %>
            <li><%= link_to "YOU", user_url(viewer) %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <div id="content">
      <%= yield %>
    </div>
  </div>
</body>
</html>
