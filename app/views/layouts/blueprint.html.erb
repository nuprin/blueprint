<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>Blueprint<%= ": #{@title}" if @title %></title>
    <%= stylesheet_link_tag "base" %>
    <%= stylesheet_link_tag "blueprint" %>
    <%= stylesheet_link_tag "autocomplete" %>
    <%= javascript_include_tag "jquery" %>
    <%= javascript_include_tag "user" %>
    <%= javascript_include_tag "plugins/form" %>
    <%= javascript_include_tag "plugins/jquery.inline-editor" %>
    <%= javascript_include_tag 'autocomplete' %>
    <%= javascript_include_tag "sortable" %>
    <%= javascript_include_tag "hoverIntent" %>
    <%= javascript_include_tag "superfish" %>
    <%= javascript_include_tag "blueprint" %>
  </head>
  <body>
    <div id="container">
      <div id="globe"></div>
      <%= render :partial => "/global/header" %>
      <%= render :partial => "/global/nav" %>
      <% if flash[:notice] %>
        <p class="notice"><%= flash[:notice] %></p>
      <% end %>
      <div id="content">
        <% if @title && !@hide_layout_title %>
          <h1><%= @title %></h1>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <span id="slogan">IT'S ALL PART OF THE PLAN</span>
      &copy; Causes 2008
    </div>
  </body>
</html>
