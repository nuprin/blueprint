<%= javascript_include_tag 'shared/task_list' %>
<%= stylesheet_link_tag 'shared/task_list' %>

<% @title = "Projects" %>

<% @projects.each do |project| %>
  <% task_object =
    Task.new(:kind => "task", :status => "prioritized",
             :project_id => project.id) %>
  <%= render :partial => "/shared/task_list",
             :locals => {:title       => project.title,
                         :see_all_url => project_path(project),
                         :tasks       => project.task_list,
                         :context     => project,
                         :task_object => task_object} %>                       
<% end %>
