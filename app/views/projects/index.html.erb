<%= javascript_include_tag 'shared/task_list' %>
<%= stylesheet_link_tag 'shared/task_list' %>

<% @title = "Projects" %>

<% @projects.each do |project| %>
  <%= render :partial => "/shared/task_list",
             :locals => {:title       => project.title,
                         :see_all_url => project_path(project),
                         :tasks       => project.task_list.map(&:task),
                         :exclude     => [:project],
                         :quick_add   => true} %>                       
<% end %>
