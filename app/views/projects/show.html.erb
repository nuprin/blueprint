<%= javascript_include_tag 'shared/task_list' %>
<%= stylesheet_link_tag 'shared/task_list' %>

<% @title = @project.title %>

<%= render :partial => "/shared/task_list",
           :locals => {:title => "UPCOMING",
                       :tasks => @project.task_list.map(&:task),
                       :exclude => [:project],
                       :quick_add => true} %>

<%= render :partial => "/shared/task_list",
           :locals => {:title => "RECENTLY COMPLETED",
                       :tasks => @project.completed_tasks,
                       :exclude => [:project]} %>
