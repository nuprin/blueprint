<%# TODO [chris]: "exclude" is confusing. %>
<% form_for :task, :url => {:action => "create"},
            :html => {:class => "quick_add_form"} do |f| %>

  <%= f.hidden_field :kind,   :value => "task" %>
  <%= f.hidden_field :status, :value => "assigned" %>
  
  <% if exclude.include?(:project) %>
    <%= f.hidden_field :project_id, :value => tasks.first.project_id %>
  <% elsif exclude.include?(:assignee) %>
    <%= f.hidden_field :assignee_id, :value => tasks.first.assignee_id %>
  <% end %>

  <%= f.text_field :title %>
  <%= submit_tag "Add Task" %> or
  <%= link_to_function "Cancel", "", :class => "quick_cancel_link" %>
<% end %>

<%= link_to_function "Add a Task", "", :class => "quick_add_link" %>