<% form_for :task, task_object,
            :url  => {:controller => "tasks", :action => "create"},
            :html => {:class => "quick_add_form"} do |f| %>

  <%= f.hidden_field :kind        %>
  <%= f.hidden_field :status      %>  
  <%= f.hidden_field :project_id  %>
  <%= f.hidden_field :assignee_id %>

  <div class="quick_add_project" style="display: none;"></div>
  <%= f.text_field :title %>

  <%= submit_tag "Add Task" %> or
  <%= link_to_function "cancel", "", :class => "quick_cancel_link" %>
<% end %>

<%= link_to_function "Add a Task", "", :class => "quick_add_link" %>