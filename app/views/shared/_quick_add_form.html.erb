<% form_for :task, task_object,
            :url  => {:controller => "tasks", :action => "quick_create"},
            :html => {:class => "quick_add_form", :method => :post} do |f| %>

  <%= f.hidden_field :status      %>
  <%= f.hidden_field :type %>
  <%= f.hidden_field :kind,        :autocomplete => :off %>
  <%= f.hidden_field :project_id,  :autocomplete => :off %>
  <%= f.hidden_field :assignee_id, :autocomplete => :off %>
  <%= f.hidden_field :creator_id, :value => viewer.id %>
  <%= hidden_field_tag :context, context %>

  <ul class="quick_add_items"></ul>
  <%= f.text_field :title %>

  <%= submit_tag "Add Task" %> or
  <%= link_to_function "cancel", "", :class => "quick_cancel_link" %>
<% end %>

<%= link_to_function "Add a Task", "", :class => "quick_add_link" %>
