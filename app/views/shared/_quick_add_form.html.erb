<% form_for :task, :url => {:controller => "tasks", :action => "create"},
            :html => {:class => "quick_add_form"} do |f| %>

  <%= f.hidden_field :kind,   :value => "task" %>
  <%= f.hidden_field :status, :value => "assigned" %>
  
  <% if context.is_a?(Project) %>
    <%= f.hidden_field :project_id, :value => context.id %>
  <% elsif context.is_a?(User) %>
    <%= f.hidden_field :assignee_id, :value => context.id %>
  <% end %>

  <%= f.text_field :title %>
  <%= submit_tag "Add Task" %> or
  <%= link_to_function "cancel", "", :class => "quick_cancel_link" %>
<% end %>

<%= link_to_function "Add a Task", "", :class => "quick_add_link" %>