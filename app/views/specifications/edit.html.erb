<%= stylesheet_link_tag "jquery.wysiwyg.css" %>
<%= stylesheet_link_tag "projects/spec" %>

<%= javascript_include_tag "plugins/jquery.wysiwyg" %>
<%= javascript_include_tag "projects/spec" %>

<% @title = @project.title %>

<%= render :partial => "/projects/project_nav",
           :locals => {:project => @project} %>

<% form_for :spec, :url => project_specification_path(@project),
  :html => {:method => :put, :id => "spec_form"} do |f| %>
  <%= f.text_area :body, :rows => nil %>
  <%= f.submit("Save Changes") %>
<% end %>
