<%# The task was reassigned. %>
<% if edit.old_value && edit.new_value %>
  <%= link_to_user edit.editor %> reassigned the task from
  <% if edit.old_value.to_i == edit.editor_id %>
    <%= edit.editor.male? ? "himself" : "herself" %>
  <% else %>
    <%= link_to_user User.find(edit.old_value) %>
  <% end %>
  to
  <% if edit.new_value.to_i == edit.editor_id %>
    <%= edit.editor.male? ? "himself" : "herself" %>.
  <% else %>
    <%= link_to_user User.find(edit.new_value) %>.
  <% end %>  
<%# The assignee was removed. %>
<% elsif edit.old_value %>
  <%= link_to_user edit.editor %> made the task unassigned.
<%# An assignee was added. %>
<% else %>
  <%= link_to_user edit.editor %> assigned the task to
  <% if edit.new_value.to_i == edit.editor_id %>
    <%= edit.editor.male? ? "himself" : "herself" %>.
  <% else %>
    <%= link_to_user User.find(edit.new_value) %>.
  <% end %>
<% end %>
