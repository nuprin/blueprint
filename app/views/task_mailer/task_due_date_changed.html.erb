<% if @task.due_date_was -%>
<% if @task.due_date -%>
<%= task_editor_name(@task) %> changed the due date from <%= 
@task.due_date_was.strftime("%b %e") %> to <%= @task.due_date.strftime("%b %e") %>.
<% else %>
<%= task_editor_name(@task) %> removed the due date from this task.
<% end %>
<% elsif @task.due_date -%>
<%= task_editor_name(@task) %> set the due date to <%= @task.due_date.strftime("%b %e") %>.
<% end -%>

