<div class="clearfix" id="task_links">
  <div id="primary_action">
    <% if task.completed? %>
      <%= link_to "Mark Incomplete", prioritize_task_path(task),
         :method => :post %>
    <% elsif task.parked? %>
      <%= link_to "Prioritize", prioritize_task_path(task),
         :method => :post, :class => "task_prioritize_link" %>
    <% elsif task.prioritized? %>
      <%= link_to "Park", park_task_path(task), :method => :post,
        :class => "task_park_link" %>
    <% end %>
  </div>
  <%= link_to "Edit #{task.displayed_type}", edit_task_path(task) %> - 
  <%= link_to "Delete", task_path(task),
    :confirm => "Are you sure you want to delete this task?",
    :method => :delete,
    :class => "task_delete_link" %>
</div>
