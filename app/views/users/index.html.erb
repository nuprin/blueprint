<%= javascript_include_tag 'shared/task_list' %>
<%= stylesheet_link_tag 'shared/task_list' %>

<% @title = "People" %>

<% @users.each do |user| %>
  <%= render :partial => "/shared/task_list",
             :locals => {:title => user.name,
                         :see_all_url => user_path(user),
                         :tasks => user.task_list,
                         :context => user,
                         :quick_add => true} %>                       
<% end %>
